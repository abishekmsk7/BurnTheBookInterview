<div class="w-full px-4 mb-10 group xl:w-1/2">
    <a title="{{ item.title }}" href="{{ item.url }}" class="block h-full bg-lightblue rounded-2xl">
        <div class="flex flex-col h-full">
                <div class="mb-10">
                    <img loading="lazy" class="w-full hover:opacity-80 transition-all" src="{{ item.mainImage.one.url(('thumbnail')) ?? '' }}" alt="">
                </div>
                <div class="flex flex-wrap ">
                    <div class="w-[10%]">
                        <p class="text-sm vertical my-16">{{ item.postDate | date( 'M jS, yy' )}}</p>
                    </div>
                    <div class="w-[90%]">
                        <div class="w-fit">
                            <p class="bg-navy uppercase text-sm rounded-full text-white px-[8px] py-[4px]">{{item.section.name}}</p>
                        </div>
                        <h1 class="text-xl lg:text-2xl text-blue group-hover:underline">{{ item.title}}</h1>
                        <div>
                        {% include '_components/redactor' with { content: item.description } %}
                        </div>
                    </div>
                </div>
        </div>
    </a>
</div>


